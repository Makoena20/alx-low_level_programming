#include <stdlib.h>

int **allocate_map(int n, int m)
{
    int **map = malloc(sizeof(int *) * n);
    if (map == NULL) return NULL; // Memory allocation failed
    
    for (int i = 0; i < n; i++)
    {
        map[i] = malloc(sizeof(int) * m);
        if (map[i] == NULL)
        {
            // Free previously allocated memory
            for (int j = 0; j < i; j++)
            {
                free(map[j]);
            }
            free(map);
            return NULL; // Memory allocation failed
        }
    }
    return map;
}

