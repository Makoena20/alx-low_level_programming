CC = gcc
SRC = main.c school.c
OBJ = main.o school.o
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

.PHONY: clean oclean fclean re

clean:
	$(RM) $(OBJ) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) $(OBJ) $(NAME)
	make -f 4-Makefile clean

re:
	make -f 4-Makefile oclean
	make -f 4-Makefile all

