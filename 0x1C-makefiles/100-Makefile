CC = gcc
SRC = main.c m.c
NAME = school
RM = rm -f

CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(SRC:.c=.o)
	$(CC) $(CFLAGS) $(SRC:.c=.o) -o $(NAME)

clean:
	$(RM) $(NAME)

oclean:
	$(RM) *.o

fclean: oclean clean

re:
	$(RM) $(NAME) *.o
	$(MAKE) all

-include $(SRC:.c=.d)

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

%.d: %.c
	$(CC) $(CFLAGS) -MM -MP -o $@ $<

