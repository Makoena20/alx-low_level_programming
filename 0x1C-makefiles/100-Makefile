CC := gcc
SRC := main.c school.c
OBJ := $(SRC:.c=.o)
NAME := school
CFLAGS := -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
    $(CC) $(OBJ) -o $@

clean:
    @/bin/rm -f *~ $(NAME)

oclean:
    @/bin/rm -f $(OBJ)

fclean: clean oclean
    @/bin/rm -f $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re

-include m.h

