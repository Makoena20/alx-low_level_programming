NAME = school
SRC = main.c other.c
OBJ = $(SRC:.c=.o)
CC = gcc
RM := rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

clean:
	$(RM) $(wildcard *~) $(wildcard *.o)

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re

ifneq (,$(wildcard m.h))
else
$(error Missing header file m.h)
endif

