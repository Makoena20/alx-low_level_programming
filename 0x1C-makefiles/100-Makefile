CC = gcc
NAME = school
SRCS = main.c m.c
OBJS = $(SRCS:.c=.o)
RM = rm -f

CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(OBJS) $(CFLAGS) -o $(NAME)

clean:
	$(RM) $(OBJS) $(NAME)

oclean:
	$(RM) $(OBJS)

fclean:
	$(RM) $(OBJS) $(NAME)
	-@echo "File m.h missing" && exit 1

re: clean
	$(CC) $(SRCS) $(CFLAGS) -o $(OBJS)

-include $(OBJS:.o=.d)
