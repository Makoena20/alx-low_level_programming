# Makefile for school project

CC := gcc
NAME := school
SRC := main.c school.c
OBJ := $(SRC:.c=.o)
RM := rm -f
CFLAGS := -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(wildcard *~) $(wildcard *#) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

.PHONY: all clean oclean fclean re

