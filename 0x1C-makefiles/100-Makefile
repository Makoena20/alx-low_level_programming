CC = gcc
SRC = main.c m.c
OBJ = main.o m.o
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) $(OBJ) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re:
	$(RM) $(OBJ) $(NAME)
	$(MAKE) all

-include m.d

%.d: %.c
	$(CC) -M $(CFLAGS) $< > $@

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

.PHONY: all clean oclean fclean re

