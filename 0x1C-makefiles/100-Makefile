# Makefile for school executable

CC := gcc
NAME := school
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)
RM := rm -f
CFLAGS := -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

clean:
	$(RM) $(wildcard *~) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

-include m.h

