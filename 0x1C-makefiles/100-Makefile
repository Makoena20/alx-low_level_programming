CC = gcc
SRC = main.c m.c
NAME = school
RM = rm -f

CFLAGS = -Wall -Werror -Wextra -pedantic

OBJ = $(SRC:.c=.o)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

.PHONY: all clean oclean fclean re

all: $(NAME)

clean:
	$(RM) $(OBJ) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) $(OBJ) $(NAME)
	@echo "File m.h is missing, cannot proceed with compilation" && exit 1

re: clean $(NAME)

-include $(OBJ:.o=.d)

