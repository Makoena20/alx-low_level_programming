NAME = school
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

SRC = main.c school.c

OBJ = $(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

clean:
	/bin/rm -f $(NAME) $(wildcard *~)

oclean:
	/bin/rm -f $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re

ifeq (,$(wildcard m.h))
$(error m.h is missing)
endif

