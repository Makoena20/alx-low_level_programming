CC = gcc
SRC = main.c school.c
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(SRC:%.c=%.o)
	$(CC) $(CFLAGS) $(SRC:%.c=%.o) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(NAME) $(SRC:%.c=%.o)

oclean:
	$(RM) $(SRC:%.c=%.o)

fclean:
	$(RM) $(NAME) $(SRC:%.c=%.o)

re:
	$(RM) $(SRC:%.c=%.o)
	touch $(SRC)

.PHONY: all clean oclean fclean re
