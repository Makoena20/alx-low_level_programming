CC = gcc
SRC = main.c m.c
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

all: $(NAME)

$(NAME): $(SRC:.c=.o)
	$(CC) $(CFLAGS) $(SRC:.c=.o) -o $@

.PHONY: clean oclean fclean re

clean:
	$(RM) $(NAME) *~

oclean:
	$(RM) *.o

fclean: clean oclean

re:
	$(RM) $(NAME) *.o
	$(CC) $(CFLAGS) $(SRC) -o $@

-include $(SRC:.c=.d)

%.d: %.c
	$(CC) -M $(CFLAGS) $< > $@.$$$$; sed 's,\($*\)\.o[ :]*,\1.o $@ : ,g' < $@.$$$$ > $@; rm -f $@.$$$$

